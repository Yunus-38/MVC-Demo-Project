@model Course

@{ 
    ViewData["Title"] = "Ekle";
}

<ol class="breadcrumb mb-4">
    <li class="breadcumb-item"><a asp-action="Index">Kurslar</a></li>
    <li class="breadcrumb-item active"><a>Kurs Ekle</a></li>
</ol>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Kurs Adı</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Kurs Açıklaması</label>
                <textarea asp-for="Description" class="form-control" rows="10"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label">Kategori</label>
                @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.c, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>