@model IEnumerable<Course>

@{ 
    ViewData["Title"] = "Kurs Listesi";
}
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-action="Index">Kurslar</a></li>
    <li class="breadcrumb-item active"><a>Kurs Listesi</a></li>
</ol>

<p>
    <a class="btn btn-outline-dark" asp-action="Create">Yeni Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Kurs Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Course course in Model)
        {
            <tr>
                <td>
                    @course.Name
                </td>

                <td>
                    <a title="Resim Ekle" class="btn btn-sm btn-outline-dark" asp-controller="CourseImages" asp-action="Upload" asp-route-id="@course.Id"><i class="fas fa-image"></i></a>
                    <a title="Resim Listesi" class="btn btn-sm btn-outline-success" asp-controller="CourseImages" asp-action="Index" asp-route-id="@course.Id"><i class="fas fa-image"></i></a>
                    <a title="Düzenle" class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@course.Id">
                        <i class="fas fa-pencil-alt"></i>
                    </a>
                    <a title="Detay" class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@course.Id">
                        <i class="fas fa-search"></i>
                    </a>
                    <a title="Sil" class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@course.Id">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>