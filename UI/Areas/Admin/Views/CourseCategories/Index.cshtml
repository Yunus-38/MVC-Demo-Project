@model IEnumerable<CourseCategory>

@{ 
    ViewData["Title"] = "Kurs Kategorisi Listesi";
}
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-action="Index">Kurs Kategorileri</a></li>
    <li class="breadcrumb-item active"><a>Kurs Kategori Listesi</a></li>
</ol>

<p>
    <a class="btn btn-outline-dark" asp-action="Create">Yeni Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Kurs Kategorisi Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (CourseCategory category in Model)
        {
            <tr>
                <td>
                    @category.Name
                </td>

                <td>
                    <a title="Düzenle" class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@category.Id">
                        <i class="fas fa-pencil-alt"></i>
                    </a>
                    <a title="Detay" class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@category.Id">
                        <i class="fas fa-search"></i>
                    </a>
                    <a title="Sil" class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@category.Id">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>